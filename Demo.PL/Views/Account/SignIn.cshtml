@model LoginViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="form-wrap">
    <div class="form-inner">
        <h1 class="title">Login</h1>
        <p class="caption mb-4">Please enter your login details to sign in.</p>

        <form asp-action="SignIn" class="pt-3">
            <div class="form-floating">
                <input type="email" asp-for="@Model.Email" class="form-control" id="email" placeholder="info@example.com">
                <label for="email">Email Address</label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <span class="password-show-toggle js-password-show-toggle"><span class="uil"></span></span>
                <input type="password" asp-for="@Model.Password" class="form-control" id="password" placeholder="Password">
                <label for="password">Password</label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <div class="form-check">
                    <input type="checkbox" asp-for="@Model.RememberMe" class="form-check-input" id="remember">
                    <label for="remember" class="form-check-label">Keep me logged in</label>
                </div>
                <div><a asp-action="ForgetPassword">Forgot password?</a></div>
            </div>

            <div class="d-grid mb-4">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
            <div class="mb-2">Don't have account? <a asp-action="SignUp">Sign Up</a></div>


        </form>
    </div>
</div>


@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }