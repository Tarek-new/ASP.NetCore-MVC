@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}


<h1>All Departments</h1>
<br />

<a asp-action="Create" class="btn btn-primary mb-2"> Create New Department</a>

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger mt-5">
        <h3>@TempData["Message"]</h3>
    </div>
}
@if(Model.Count()!=0)
{
    <table class="table table-responsive-xl table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation.ToShortDateString() </td>
                    <partial name="_ButtonsPartialView" model="@item.Id.ToString()" />

                </tr>
            }
        </tbody>




    </table>
}

else
{
    <div class="alert alert-danger mt-5">
        <h3>No Departments Found</h3>
    </div>

}

