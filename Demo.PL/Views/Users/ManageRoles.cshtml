@model UserRolesViewModel
@{
    ViewData["Title"] = "ManageRoles";
}

<h2 style="text-decoration:underline ; margin-top:3%">Manage Roles for @Model.UserName</h2>
<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    @for (int i = 0; i < Model.Roles.Count(); i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
            <input class="form-check-input" asp-for="@Model.Roles[i].IsSelected">
            <label class="form-check-label fw-bold" style="font-weight:bold">
                @Model.Roles[i].RoleName
            </label>
        </div>
    }

    <input type="submit" class="btn btn-primary mt-2" value="Save" />
    <a asp-action="index" class="btn btn-danger mt-2">Cancel</a>
</form>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />

}
