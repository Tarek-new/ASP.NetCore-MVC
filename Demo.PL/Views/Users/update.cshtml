@model UserViewModel
@{
    ViewData["Title"] = "update";
}
<h2 style="text-decoration:underline ; margin-top:3% " >Update User</h2>
<form asp-action="Update">
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for="@Model.UserName" class="col-form-label"></label>
        <input asp-for="@Model.UserName" class="form-control" />
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label">Email</label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <br />
    <input type="reset" class="btn btn-danger" />


    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="index" class="btn btn-light">Back To Users List</a>
</form>

@section Scripts{

        <partial name="_ValidationScriptsPartial"/>

}
