@model ApplicationUser
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>User Details</h1>

<div class="mt-3">

    <dl class="row">
        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.UserName.ToString()</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>


        <dt class="col-sm-2">IsActive</dt>
        <dd class="col-sm-10 ">
            <input type="checkbox" disabled="disabled" @(Model.IsAgree ? "checked='check'" : "") />
            <br />
        </dd>
        
        <dt class="col-sm-2 " > PhoneNumber</dt>
        <dd class="col-sm-10">@Model.PhoneNumber </dd>

    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Index" class="btn btn-dark">Back To Users List</a>
</div>


