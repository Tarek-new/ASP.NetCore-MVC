@model UserViewModel

@{
    ViewData["Title"] = "Details";
}

<h2 style="text-decoration:underline ; margin-top:3% ">User Details</h2>

<div class="mt-3">

    <dl class="row">
        <dt class="col-sm-2">User Name</dt>

        <dd class="col-sm-10">@Model.UserName</dd>

        <dt class="col-sm-2">Email </dt>
        <dd class="col-sm-10">@Model.Email </dd>

        <dt class="col-sm-2"> Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2"> Roles</dt>
        <dd class="col-sm-10">@String.Join(" , ",Model.Roles )</dd>

    </dl>
</div>
<div>
    <a asp-action="Update"  asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
</div>
